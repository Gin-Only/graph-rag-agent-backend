# 模型提供商配置
# 可选值: openai 或 ollama
MODEL_PROVIDER=openai

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_LLM_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-large

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434
# Ollama默认LLM模型
OLLAMA_DEFAULT_MODEL=llama3
# Ollama备用LLM模型，按优先级排序
# 当默认模型不可用时，系统会按顺序尝试使用这些模型
# OLLAMA_FALLBACK_MODELS_LLM=llama2,mistral,gemma

# Ollama嵌入模型配置
# 默认嵌入模型
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
# 可选: BAAI/bge-base-en 或 BAAI/bge-large-zh
# OLLAMA_EMBEDDING_MODEL=BAAI/bge-base-en
# OLLAMA_EMBEDDING_MODEL=BAAI/bge-large-zh
# 备用嵌入模型，按优先级排序
# OLLAMA_FALLBACK_MODELS_EMBEDDING=mxbai-embed-large

# 模型参数配置
TEMPERATURE=0.7
MAX_TOKENS=2048

# Neo4j数据库配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# 服务器配置
PORT=8000
HOST=0.0.0.0